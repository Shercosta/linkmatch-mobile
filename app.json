{
  "expo": {
    "name": "linkmatch-mobile",
    "slug": "linkmatch-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "linkmatchmobile",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/linkmatch-sample.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0A66C2"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}